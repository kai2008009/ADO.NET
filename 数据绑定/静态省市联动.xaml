<Window x:Class="数据绑定.省市联动"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="省市联动" Height="330" Width="370" Loaded="Window_Loaded_1">
    <Grid Margin="0,0,6,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="103*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listbox1" HorizontalAlignment="Left" Height="250" Margin="9,36,0,0" VerticalAlignment="Top" Width="100" SelectionChanged="listbox1_SelectionChanged"/>
        <ListBox x:Name="listbox2" HorizontalAlignment="Left" Height="247" Margin="127,36,0,0" VerticalAlignment="Top" Width="100" Grid.ColumnSpan="2" SelectionChanged="listbox2_SelectionChanged"/>
        <ListBox x:Name="listbox3" HorizontalAlignment="Left" Height="244" Margin="35,38,0,0" VerticalAlignment="Top" Width="97" Grid.Column="1"/>
        <Label x:Name="lab" Content="1" HorizontalAlignment="Left" Margin="35,13,0,0" VerticalAlignment="Top"/>
        <Label Content="2" HorizontalAlignment="Left" Margin="155,13,0,0" VerticalAlignment="Top"/>
        <Label Content="3" HorizontalAlignment="Left" Margin="64,14,0,0" VerticalAlignment="Top" Grid.Column="1"/>

    </Grid>
</Window>
